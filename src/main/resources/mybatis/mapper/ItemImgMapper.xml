<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.fkream.itemImg.ItemImgMapper">
    <resultMap id="ItemImgResultMap" type="com.flab.fkream.itemImg.ItemImg">
        <id property="id" column="id"/>
        <result property="itemId" column="item_id"/>
        <result property="imgName" column="img_name"/>
        <result property="imgUrl" column="img_url"/>
        <result property="originName" column="origin_name"/>
        <result property="isRepresentativeImg" column="is_representative_img"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>


    <insert id="save" parameterType="com.flab.fkream.itemImg.ItemImg" useGeneratedKeys="true" keyProperty="id">
        insert into ITEM_IMG (IMG_NAME, IMG_URL, ORIGIN_NAME, is_representative_img, CREATE_AT)
        VALUES (#{imgName}, #{imgUrl}, #{originName}, #{isRepresentativeImg}, #{createdAt});
    </insert>

    <select id="findOne" resultMap="ItemImgResultMap">
        select *
        from ITEM_IMG
        where ID = #{id}
    </select>

    <select id="findAll" resultMap="ItemImgResultMap">
        select *
        from ITEM_IMG
    </select>
</mapper>